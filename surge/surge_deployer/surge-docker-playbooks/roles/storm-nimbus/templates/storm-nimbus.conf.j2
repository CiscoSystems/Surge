[program:storm-nimbus]
command=/usr/local/etc/storm/bin/storm nimbus
user=storm
autostart=true
autorestart=true
startsecs=10
startretries=999
log_stdout=true
log_stderr=true
logfile=/var/log/storm/storm-nimbus.log
logfile_maxbytes=20MB
logfile_backups=10
